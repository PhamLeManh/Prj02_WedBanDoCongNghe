@model IEnumerable<WedBanDoCongNghe.Models.DonHang>

<h3>Lịch sử đơn hàng</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ngày tạo</th>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Tổng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.NgayTao.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    @foreach (var item in order.ChiTietDonHangs)
                    {
                        <div>@item.SanPham.TenSanPham</div>
                    }
                </td>
                <td>
                    @foreach (var item in order.ChiTietDonHangs)
                    {
                        <div>@item.SoLuong</div>
                    }
                </td>
                <td>
                    @order.ChiTietDonHangs.Sum(c => c.SanPham.Gia * c.SoLuong).ToString("N0") ₫
                </td>
            </tr>
        }
    </tbody>
</table>
