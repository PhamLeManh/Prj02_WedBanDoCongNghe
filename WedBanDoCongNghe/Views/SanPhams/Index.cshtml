@model IEnumerable<WedBanDoCongNghe.Models.SanPham>

<h3>Quản lý sản phẩm</h3>
<a asp-action="Create" class="btn btn-success mb-2">Thêm sản phẩm</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Giá</th>
            <th>Hình ảnh</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sp in Model)
        {
            <tr>
                <td>@sp.TenSanPham</td>
                <td>@String.Format("{0:N0} ₫", sp.Gia)</td>
                <td><img src="@sp.HinhAnh" width="100" /></td>
                <td>@(sp.Active ? "Active" : "Non-Active")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@sp.SanPhamId" class="btn btn-primary btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@sp.SanPhamId" class="btn btn-danger btn-sm">Xóa</a>
                    <a asp-action="ToggleActive" asp-route-id="@sp.SanPhamId" class="btn btn-warning btn-sm">Toggle Active</a>
                </td>
            </tr>
        }
    </tbody>
</table>
