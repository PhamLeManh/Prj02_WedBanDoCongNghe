<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WedBanDoCongNghe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        /* Tone đen xám */
        body {
            background-color: #1e1e1e;
            color: #e0e0e0;
        }

        .navbar {
            background-color: #2b2b2b !important;
        }

        .navbar .nav-link, 
        .navbar .navbar-brand, 
        .navbar-text {
            color: #e0e0e0 !important;
        }

        .navbar .nav-link:hover {
            color: #ffffff !important;
        }

        footer {
            background-color: #2b2b2b;
            color: #aaa;
        }

        footer a {
            color: #bbb;
        }

        footer a:hover {
            color: #fff;
        }
    </style>
</head>
<body>
    <header>
        @using Microsoft.AspNetCore.Identity
        @inject SignInManager<WedBanDoCongNghe.Models.AppUser> SignInManager
        @inject UserManager<WedBanDoCongNghe.Models.AppUser> UserManager

        <nav class="navbar navbar-expand-lg shadow-sm mb-3">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-cpu me-2"></i> MDP Technology
                </a>

                <!-- Toggle cho mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nội dung navbar -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Menu -->
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i> Trang chủ</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="SanPhams" asp-action="DienThoai"><i class="bi bi-phone"></i> Điện thoại</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="SanPhams" asp-action="Laptop"><i class="bi bi-laptop"></i> Laptop</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="SanPhams" asp-action="LinhKien"><i class="bi bi-cpu"></i> Linh kiện</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy"><i class="bi bi-telephone"></i> Liên hệ</a></li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-danger" asp-controller="SanPhams" asp-action="Index"><i class="bi bi-gear"></i> Quản lý sản phẩm</a>
                                </li>
                            }
                            else if (User.IsInRole("Customer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-success" asp-controller="DonHangs" asp-action="Cart"><i class="bi bi-cart"></i> Giỏ hàng</a>
                                </li>
                            }
                        }
                    </ul>

                    <!-- Search -->
                    <form class="d-flex me-3" asp-controller="SanPhams" asp-action="Search" method="get">
                        <input class="form-control rounded-pill me-2" type="search" name="keyword" placeholder="Tìm sản phẩm..." aria-label="Search">
                        <button class="btn btn-outline-light rounded-pill" type="submit"><i class="bi bi-search"></i></button>
                    </form>

                    <!-- Auth -->
                    <div class="d-flex align-items-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <span class="navbar-text me-3">Xin chào, <b>@User.Identity?.Name</b></span>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger rounded-pill">Đăng xuất</button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light rounded-pill me-2">
                                <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                            </a>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-success rounded-pill">
                                <i class="bi bi-person-plus"></i> Đăng ký
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4 bg-dark text-light">
        <div class="container text-center py-4">
            <div class="mb-3">
                &copy; 2025 - WedBanDoCongNghe
            </div>
            <div class="social-links d-flex justify-content-center flex-wrap gap-4">
                <a href="https://www.facebook.com" target="_blank" class="text-light">
                    <i class="bi bi-facebook fs-3"></i>
                </a>
                <a href="https://www.instagram.com" target="_blank" class="text-light">
                    <i class="bi bi-instagram fs-3"></i>
                </a>
                <a href="https://www.twitter.com" target="_blank" class="text-light">
                    <i class="bi bi-twitter fs-3"></i>
                </a>
                <a href="https://www.youtube.com" target="_blank" class="text-light">
                    <i class="bi bi-youtube fs-3"></i>
                </a>
                <a href="https://www.tiktok.com" target="_blank" class="text-light">
                    <i class="bi bi-tiktok fs-3"></i>
                </a>
                <a href="https://www.linkedin.com" target="_blank" class="text-light">
                    <i class="bi bi-linkedin fs-3"></i>
                </a>
                <a href="https://github.com" target="_blank" class="text-light">
                    <i class="bi bi-github fs-3"></i>
                </a>
                <a href="https://www.pinterest.com" target="_blank" class="text-light">
                    <i class="bi bi-pinterest fs-3"></i>
                </a>
            </div>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
