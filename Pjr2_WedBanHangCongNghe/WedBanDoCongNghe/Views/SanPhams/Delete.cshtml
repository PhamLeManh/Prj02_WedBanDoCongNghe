@model WedBanDoCongNghe.Models.SanPham

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h2>Xóa sản phẩm</h2>

<h3>Bạn có chắc muốn xóa sản phẩm này?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Tên sản phẩm</dt>
        <dd class="col-sm-10">@Model.TenSp</dd>

        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Gia.ToString("N0") đ</dd>

        <dt class="col-sm-2">Số lượng</dt>
        <dd class="col-sm-10">@Model.SoLuong</dd>

        <dt class="col-sm-2">Hình ảnh</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.HinhAnh))
            {
                <img src="@Model.HinhAnh" width="120" />
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="SanPhamId" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
