@model WedBanDoCongNghe.Models.SanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<h2>Chi tiết sản phẩm</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Mã SP</dt>
        <dd class="col-sm-10">@Model.SanPhamId</dd>

        <dt class="col-sm-2">Tên sản phẩm</dt>
        <dd class="col-sm-10">@Model.TenSp</dd>

        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Gia.ToString("N0") đ</dd>

        <dt class="col-sm-2">Số lượng</dt>
        <dd class="col-sm-10">@Model.SoLuong</dd>

        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.MoTa</dd>

        <dt class="col-sm-2">Hình ảnh</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.HinhAnh))
            {
                <img src="@Model.HinhAnh" width="150" />
            }
        </dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.SanPhamId" class="btn btn-warning">Sửa</a>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
