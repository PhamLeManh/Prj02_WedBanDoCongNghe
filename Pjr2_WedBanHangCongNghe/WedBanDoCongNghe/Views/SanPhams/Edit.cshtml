@model WedBanDoCongNghe.Models.SanPham

@{
    ViewData["Title"] = "Sửa sản phẩm";
}

<h2>Sửa sản phẩm</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="SanPhamId" />

    <div class="form-group">
        <label asp-for="TenSp"></label>
        <input asp-for="TenSp" class="form-control" />
        <span asp-validation-for="TenSp" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gia"></label>
        <input asp-for="Gia" class="form-control" />
        <span asp-validation-for="Gia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SoLuong"></label>
        <input asp-for="SoLuong" class="form-control" />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MoTa"></label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Hình ảnh hiện tại</label><br />
        @if (!string.IsNullOrEmpty(Model.HinhAnh))
        {
            <img src="@Model.HinhAnh" width="120" />
        }
    </div>
    <div class="form-group">
        <label>Chọn hình ảnh mới</label>
        <input type="file" name="upload" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
