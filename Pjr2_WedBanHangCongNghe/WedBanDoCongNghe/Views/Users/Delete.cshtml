@model WedBanDoCongNghe.Models.User

@{
    ViewData["Title"] = "Xóa User";
}

<h2>@ViewData["Title"]</h2>

<h4>Bạn có chắc muốn xóa user này?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Tên đăng nhập</dt>
    <dd class="col-sm-10">@Model.TenDangNhap</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Vai trò</dt>
    <dd class="col-sm-10">@Model.VaiTro</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
