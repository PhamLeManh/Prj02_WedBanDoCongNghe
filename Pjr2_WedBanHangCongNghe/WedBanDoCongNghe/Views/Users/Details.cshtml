@model WedBanDoCongNghe.Models.User

@{
    ViewData["Title"] = "Chi tiết User";
}

<h2>@ViewData["Title"]</h2>

<dl class="row">
    <dt class="col-sm-2">Tên đăng nhập</dt>
    <dd class="col-sm-10">@Model.TenDangNhap</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Vai trò</dt>
    <dd class="col-sm-10">@Model.VaiTro</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</p>
